<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.instantPhotoShare"
    android:versionCode="7"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:icon="@drawable/icon3"
        android:label="@string/app_name" >
        <activity
            android:name="com.instantPhotoShare.Activities.InitialLaunch"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.instantPhotoShare.Activities.MainScreen" />
        <activity android:name="com.instantPhotoShare.Activities.FirstTimeUseScreen" />
        <activity android:name="com.instantPhotoShare.Activities.AddUsersToGroup" />
        <activity android:name="com.instantPhotoShare.Activities.ManageGroups" />
        <activity android:name="com.instantPhotoShare.Activities.Preferences" />
        <activity
            android:name="com.instantPhotoShare.Activities.EnterIdentifyingInformation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.instantPhotoShare.Activities.LoginScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.instantPhotoShare.Activities.NotificationsScreen" />
        <activity android:name="com.instantPhotoShare.Activities.CreateGroup" />
        <activity android:name="com.instantPhotoShare.Activities.GroupGallery" />
        <activity
            android:name="com.instantPhotoShare.Activities.TakePicture"
            android:configChanges="orientation|keyboardHidden"
            android:icon="@drawable/shutter_icon_inverted"
            android:label="Share Bear Camera" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.instantPhotoShare.Activities.CreateCustomCamShortcut"
            android:icon="@drawable/shutter_icon_inverted"
            android:label="Share Bear Group" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.instantPhotoShare.Activities.ShareFromeIntent"
            android:icon="@drawable/icon3"
            android:label="Share Bear" >
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity android:name="com.instantPhotoShare.Activities.InsideGroupGallery" />
        <activity android:name="com.instantPhotoShare.Activities.SinglePictureGallery" />
        <activity
            android:name="com.tools.MessageDialog"
            android:configChanges="orientation|keyboardHidden" />

        <receiver android:name="com.instantPhotoShare.AutoStart" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.instantPhotoShare.Alarm" >
            <intent-filter>
                <action android:name="com.instantPhotoShare.myAction" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.instantPhotoShare.MyService"
            android:enabled="true" />

        <activity
            android:name="com.tools.ToolsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>