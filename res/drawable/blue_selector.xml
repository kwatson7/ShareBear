<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:drawable="@drawable/blue_background">
          <padding android:left="3dp"
               android:top="3dp"
               android:right="3dp"
               android:bottom="3dp"/>
          </item>  <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/blue_background">
          <padding android:left="3dp"
               android:top="3dp"
               android:right="3dp"
               android:bottom="3dp"/> </item><!-- focused -->
    <item android:drawable="@android:color/transparent">
        <padding android:left="3dp"
               android:top="3dp"
               android:right="3dp"
               android:bottom="3dp" /> </item><!-- default -->
</selector>