<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/gray_gradient">

<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/linearLayout1"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0px"
		android:layout_weight="1">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:padding="5dp">
			<ImageView android:id="@+id/takePictureButton"
				android:layout_width="fill_parent"
				android:layout_height="0px"
				android:scaleType="fitCenter"
				android:layout_gravity="center"
				android:clickable="true"
				android:layout_weight="1"
				android:src="@drawable/takeapicture_xml"
				android:onClick="takePictureClicked"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="Take Picture"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:textColor="@android:color/primary_text_dark"
				android:typeface="serif"
				android:textStyle="bold"
				android:textSize="15dp"
				style="@style/ShadowText"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:padding="5dp">
			<ImageView android:id="@+id/createNewGroupButton"
				android:layout_width="fill_parent"
				android:layout_height="0px"
				android:layout_weight="1"
				android:scaleType="fitCenter"
				android:src="@drawable/creategroups_xml"
				android:clickable="true"
				android:onClick="createNewGroupClicked"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="Create New Group"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:textColor="@android:color/primary_text_dark"
				android:typeface="serif"
				android:textStyle="bold"
				android:textSize="15dp"
				style="@style/ShadowText"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:padding="5dp">
			<ImageView android:id="@+id/manageGroupsButton"
				android:layout_width="fill_parent"
				android:layout_height="0px"
				android:layout_weight="1"
				android:scaleType="fitCenter"
				android:src="@drawable/managegroups_xml"
				android:clickable="true"
				android:onClick="manageGroupsClicked"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="Manage Groups"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:textColor="@android:color/primary_text_dark"
				android:typeface="serif"
				android:textStyle="bold"
				android:textSize="15dp"
				style="@style/ShadowText"
			/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0px"
		android:layout_weight="1"
		android:padding="5dp">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:padding="5dp">
			<ImageView android:id="@+id/viewPictures"
				android:layout_width="fill_parent"
				android:layout_height="0px"
				android:layout_weight="1"
				android:scaleType="fitCenter"
				android:src="@drawable/viewpictures_xml"
				android:clickable="true"
				android:onClick="viewPicturesClicked"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="View Pictures"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:textColor="@android:color/primary_text_dark"
				android:typeface="serif"
				android:textStyle="bold"
				android:textSize="15dp"
				style="@style/ShadowText"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:padding="5dp">
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="0px"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center">
			<ImageView
			    android:id="@+id/notificationsButton"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:scaleType="fitCenter"
				android:src="@drawable/envelope_xml"
				android:clickable="true"
				android:onClick="notificationsClicked"
			/>
			<TextView
			    android:id="@+id/nNotificationsText"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    android:layout_alignTop="@+id/notificationsButton"
			    android:layout_alignRight="@+id/notificationsButton"
			    android:visibility="invisible"
			    android:background="@drawable/red_circle_white_border"
			    android:textColor="@android:color/white"
			    android:textSize="12dp"
			    android:typeface="serif"
				android:textStyle="bold"
				android:gravity="center"
				style="@style/ShadowText"
			/>
			</RelativeLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="Notifications"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:textColor="@android:color/primary_text_dark"
				android:typeface="serif"
				android:textStyle="bold"
				android:textSize="15dp"
				style="@style/ShadowText"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:padding="5dp">
			<ImageView android:id="@+id/contactDeveloper"
				android:layout_width="fill_parent"
				android:layout_height="0px"
				android:layout_weight="1"
				android:scaleType="fitCenter"
				android:src="@drawable/contactdeveloper_xml"
				android:clickable="true"
				android:onClick="contactDeveloperClicked"
			/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:text="Email Developer"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:textColor="@android:color/primary_text_dark"
				android:typeface="serif"
				android:textStyle="bold"
				android:textSize="15dp"
				style="@style/ShadowText"
			/>
		</LinearLayout>
	</LinearLayout>
<Gallery
    android:id="@+id/galleryView"
    android:layout_width="fill_parent" 
    android:layout_height="48dp"
    android:gravity="center|bottom"
    android:spacing="1dp"
/>
</LinearLayout>
<TextView
    android:id="@+id/validateReminder"
    style="@style/ShadowText"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:layout_gravity="center|bottom"
    android:background="@drawable/purple_gradient"
    android:gravity="center"
    android:text="Remember to validate your email address(es)"
    android:textSize="13dp"
    android:textStyle="bold"
    android:typeface="serif"
    android:visibility="gone"
/>
<Button
    android:id="@+id/youShouldMakeAGroup"
    style="@style/ShadowText"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:layout_gravity="center|bottom"
    android:background="@drawable/purple_selector"
    android:gravity="center"
    android:text="You should make a group to share with friends"
    android:textSize="13dp"
    android:textStyle="bold"
    android:typeface="serif"
    android:visibility="gone"
    android:onClick="createNewGroupClicked"
/>
<ProgressBar
	android:id="@+id/fetchingData"
	android:layout_width="18dp"
	android:layout_height="18dp"
	android:indeterminate="true"
	android:layout_gravity="top|left"
	android:visibility="visible"/>
</FrameLayout>
